<style>
  .wrapper {
    width: 90%;
    margin: 0 auto;
    height: 90%;
    padding: 25px;
    display: flex;
    flex-direction: column;
    font-family: Arial, Helvetica, sans-serif;
    color: black;
  }

  .header {
    padding: 20px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  hr {
    height: 1px;
    background-color: black;
    width: 100%;
  }

  p {
    margin: 0;
    padding: 0;
  }

  .logo {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 10px;
    width: 40%;

    > img {
      height: 80px;
    }

    > p {
      font-size: 20px;
      font-weight: 600;
    }
  }

  .header-info {
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: end;
  }

  .header-text {
    font-size: 28px;
    font-weight: 500;
    width: min-content;
  }

  .company-info {
    display: flex;
    flex-direction: column;
    align-items: end;
    gap: 0;

    > p {
      font-size: 14px;
      font-weight: 400;
      line-height: 16px;
    }
  }

  .bill-to {
    padding: 20px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;

    p {
      font-size: 14px;
      font-weight: 400;
      line-height: 20px;
      color: black;
    }
  }

  .receiver {
    display: flex;
    flex-direction: column;
  }

  .invoice-info {
    display: flex;
    flex-direction: column;
  }

  .info-table {
    display: flex;
    flex-direction: row;
  }

  .info-headers {
    display: flex;
    flex-direction: column;
    align-items: end;
  }

  .info-content {
    display: flex;
    flex-direction: column;
    align-items: start;
  }

  .booking-table {
    padding: 20px;
    display: grid;
    grid-template-columns: 200px 120px 120px 100px;
    justify-content: space-between;

    p {
      font-size: 14px;
      font-weight: 400;
      line-height: 20px;
      color: black;
    }
  }
</style>
<div class="wrapper">
  <div class="wrapper">
    <section class="header">
      <div class="logo">
        {{#if facilityLogo}}
          <img src="{{facilityLogo}}"/>
        {{/if}}
        <p>{{invoice.timecard.booking.facility.name}}</p>
      </div>
      <div class="header-info">
        <p class="header-text">INVOICE</p>
        <div class="company-info">
          <p style="font-weight: 600;">{{invoice.timecard.booking.facility.name}}</p>
          <p>{{invoice.timecard.booking.facility.address}}, {{invoice.timecard.booking.facility.city}}</p>
        </div>
      </div>
    </section>
    <hr/>
    <section class="bill-to">
      <div class="receiver">
        <p style="color: darkgray; font-weight: 600;">BILL TO</p>
        <p style="font-weight: 600;">{{invoice.timecard.employee.first_name}} {{invoice.timecard.employee.last_name}}</p>
        <p>{{invoice.timecard.employee.city}}</p>
        <p style="margin-top: 15px;">{{invoice.timecard.employee.email}}</p>
        <p>{{invoice.timecard.employee.phone}}</p>
      </div>
      <div class="invoice-info">
        <div class="info-table">
          <div class="info-headers">
            <p style="padding-right: 6px; font-weight: 600;">Invoice Number:</p>
            <p style="padding-right: 6px; font-weight: 600;">Invoice Date:</p>
            <p style="padding: 4px; padding-right: 6px; background-color: lightgray; margin-top: 6px; font-weight: 600;">Amount Due(USD):</p>
          </div>
          <div class="info-content">
            <p>{{invoice.id}}</p>
            <p>{{date}}</p>
            <p style="padding: 4px; padding-left: 0; width: 100%; background-color: lightgray; margin-top: 6px;">${{countAmountTotal invoice.amountPaid 8}}</p>
          </div>
        </div>
      </div>
    </section>
    <hr/>
    <section class="booking-table">
      <p style="font-weight: 600;">Work</p>
      <p style="font-weight: 600; justify-self: end;">Price per hour</p>
      <p style="font-weight: 600; justify-self: end;">Working hours</p>
      <p style="font-weight: 600; justify-self: end;">Amount</p>
      <div style="display: flex; flex-direction: column; margin-top: 10px;">
        <p style="font-weight: 600;">Healthcare worker</p>
      </div>
      <p style="margin-top: 10px; justify-self: end;">${{invoice.timecard.booking.pricePerHour}}</p>
      <p style="margin-top: 10px; justify-self: end;">{{invoice.timecard.booking.workingHours}}</p>
      <p style="margin-top: 10px; justify-self: end;">${{invoice.amountPaid}}</p>
    </section>
    <hr/>
    <section style="display: flex; flex-direction: row-reverse;">
      <div style="width: 35%;; display: grid; grid-template-columns: 1fr 1fr;">
        <p style="font-weight: 600; justify-self: end;">Subtotal:</p>
        <p style="justify-self: end;">${{invoice.amountPaid}}</p>
        <p style="font-weight: 600; justify-self: end;">Tax 8%:</p>
        <p style="justify-self: end;">${{countTax invoice.amountPaid 8}}</p>
        <p style="font-weight: 600; justify-self: end; margin-top: 15px;">Total:</p>
        <p style="justify-self: end; margin-top: 15px;">${{countAmountTotal invoice.amountPaid 8}}</p>
      </div>
    </section>
  </div>
</div>